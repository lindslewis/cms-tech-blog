{{!-- let's just make a simple form layout lindsay --}}


<section>
    <h2 class="text-center mt-5">Login</h2>
    <form class="form loginForm">
        {{!-- email input below --}}
        <section class="d-flex flex-column align-items-center">
            <section class="mb-3 w-50">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputEmail" aria-describedby="email">
            </section>
            {{!-- password input below --}}
            <section class="mb-3 w-50">
                <label for="inputPassword" class="form-label">Password</label>
                <input type="password" class="form-control" id="inputPassword">
            </section>
            
            <section class="d-flex justify-content-center my-4">
                <button type="submit" class="btn btn-outline-success px-5" id="loginBtn">Login</button>
            </section>
        
            <p class="text-center">Don't have an account? Sign up <a href="/signup" class="text-decoration-none text-success">here</a>.</p>

        </section>
       
    </form>
</section>

<script src="../public/js/login.js"></script>